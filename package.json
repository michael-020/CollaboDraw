{
  "name": "collabodraw",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "turbo run build",
    "postinstall": "prisma generate",
    "deploy": "vercel --env DATABASE_URL=$DATABASE_URL --env JWT_SECRET=$JWT_SECRET"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.0.0"
}