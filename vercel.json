{
    "git": {
      "ignoredFiles": [
        "packages/**",
        "node_modules/**"
      ]
    },
    "builds": [
      {
        "src": "apps/client/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "apps/http-server/package.json",
        "use": "@vercel/node"
      },
      {
        "src": "apps/ws-server/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "apps/http-server/dist/index.js" },
      { "src": "/ws/(.*)", "dest": "apps/ws-server/dist/index.js" },
      { "src": "/(.*)", "dest": "apps/client/public/$1" }
    ]
  }